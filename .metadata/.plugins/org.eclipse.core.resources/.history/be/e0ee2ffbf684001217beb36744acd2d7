package ru.spbstu.telematics.ivanov722.lab3m;

import java.util.Random;

public class CarBrownES implements Runnable {

	@Override
	public void run() {
		while (true) {
			try {
				//Р¶РґРµРј РґРѕ 2 СЃРµРєСѓРЅРґ РїСЂРµР¶РґРµ С‡РµРј СЂРµСЃРїР°СѓРЅРёС‚СЊСЃСЏ
				long sleepTime = new Random().nextInt(2000);
				Thread.sleep(sleepTime);
				
				
				
				
				
				
				CrossRoad.getLockCardirE().lock();
				System.out.println("Коричневая машина (e) подъезжает к перекрестку");
				CrossRoad.getLockCardirS().lock();
				System.out.println("Коричневая машина (Е) выезжает на перекресток");
				CrossRoad.getLockSectionNE().lock();
				System.out.println("Коричневая машина (Е) занимает секцию NE");
				CrossRoad.getLockSectionWS().lock();
				System.out.println("Коричневая машина (Е) занимает секцию WS");
				try {
					//РЅРµ Р·РЅР°СЋ Р·Р°С‡РµРј С‚СѓС‚ РІРѕРѕР±С‰Рµ Р±СѓР»РµРІСЃРєРёРµ РїРѕР»СЏ СЃРµРєС†РёР№,
					//РЅР° РЅРёС… РЅРёРєС‚Рѕ РЅРµ СЃРјРѕС‚СЂРёС‚, РЅРѕ СЂР°Р· СѓР¶ РїРѕРїСЂРѕСЃРёР»Рё..
					CrossRoad.setBusyCardirE(true);	//Р·Р°С…РІР°С‚С‹РІР°РµРј СЃРІРѕСЋ СЃС‚РѕСЂРѕРЅСѓ СЃРІРµС‚Р°
					CrossRoad.setBusyCardirS(true);	//Р·Р°С…РІР°С‚С‹РІР°РµРј СЃС‚РѕСЂРѕРЅСѓ СЃРІРµС‚Р°, РєРѕС‚РѕСЂР°СЏ СЃР»РµРІР°
					CrossRoad.setBusySectionNE(true);		
					CrossRoad.setBusySectionWS(true);
					
					//Р·Р°С…РІР°С‚РёР»Рё, СЂР°РґСѓРµРјСЃСЏ Рё Р¶РґРµРј РєР°РєРѕРµ-С‚Рѕ РІСЂРµРјСЏ
					Thread.sleep(500);
					
					//РѕС‚РїСѓСЃРєР°РµРј РІСЃРµС…, РєРѕРіРѕ Р·Р°С…РІР°С‚РёР»Рё
					CrossRoad.setBusyCardirE(false);	//Р·Р°С…РІР°С‚С‹РІР°РµРј СЃРІРѕСЋ СЃС‚РѕСЂРѕРЅСѓ СЃРІРµС‚Р°
					CrossRoad.setBusyCardirS(false);	//Р·Р°С…РІР°С‚С‹РІР°РµРј СЃС‚РѕСЂРѕРЅСѓ СЃРІРµС‚Р°, РєРѕС‚РѕСЂР°СЏ СЃР»РµРІР°
					CrossRoad.setBusySectionNE(false);		
					CrossRoad.setBusySectionWS(false);
					
				} finally {
					CrossRoad.getLockCardirE().unlock();
					CrossRoad.getLockCardirS().unlock();
					CrossRoad.getLockSectionNE().unlock();
					CrossRoad.getLockSectionWS().unlock();
				}
				
				System.out.println("Коричневая машина (Е) покинула перекресток");
				
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			
		}	
	}

}
