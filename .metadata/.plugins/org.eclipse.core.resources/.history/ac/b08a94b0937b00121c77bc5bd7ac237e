    private void btnConnectActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add ur handling code here:
    	try {
			socket = new Socket(txtAddress.getText(), 6667);
			out = new ObjectOutputStream(socket.getOutputStream());
			in = new ObjectInputStream(socket.getInputStream());
			aMessage = new Message(txtNickname.getText(), "%hello%");
			out.writeObject(aMessage);
			out.flush();
			btnConnect.setEnabled(false);
			btnDisconnect.setEnabled(true);
			btnSend.setEnabled(true);
			
			ClientReceiver aReceiver = new ClientReceiver(socket, in, txtrMainArea);
			Thread receiverThread = new Thread(aReceiver);
			receiverThread.start();
			
		} catch (UnknownHostException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
    }                                          

    private void btnDisconnectActionPerformed(java.awt.event.ActionEvent evt) {                                              
    	try {
    		aMessage = new Message(txtNickname.getText(), "%exit%");
    		out.writeObject(aMessage);
    		out.flush();
    		out.close();
			socket.close();
			btnConnect.setEnabled(true);
			btnDisconnect.setEnabled(false);
			btnSend.setEnabled(false);
		} catch (IOException e) {
			e.printStackTrace();
		}
    }                                             

    private void btnSendActionPerformed(java.awt.event.ActionEvent evt) {                                        
        aMessage = new Message(txtNickname.getText(), txtrMessageArea.getText());
        try {
			out.writeObject(aMessage);
			out.flush();
			txtrMessageArea.setText("");
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
    }                                       

